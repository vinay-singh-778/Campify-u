<%- include("../header.ejs") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>welcome to the camping page</h1>
            <p>view our campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new"> Click Me To Add a New Campground</a>
            </p>
        </div>
    </header>
    <div class="row" style= "margin: 0 auto;">
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-md-4 col-sm-6">
                <div class= "thumbnail">
                    <img src="<%= campgrounds.image %>" alt="<%= campgrounds.name %>" height="200px">
                </div>
                <div class="caption">
                    <h3><%= campgrounds.name %></h3>
                </div>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/<%= campgrounds._id %>">more info </a>
                </p>
            </div>
        <% }); %>
    </div>
</div>

<%- include("../footer.ejs") %>